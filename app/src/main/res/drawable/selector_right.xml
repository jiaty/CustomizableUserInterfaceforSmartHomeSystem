<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 點選時 -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/set1_lightGreen" />
            <corners android:bottomLeftRadius="0dp" android:radius="15dp" android:topLeftRadius="0dp" />
            <stroke android:width="1dp" android:color="@color/set1_Fullwhite" />
        </shape>
    </item>
    <!-- 按壓時 -->
    <item android:state_checked="false" android:state_pressed="true">
        <shape>
            <solid android:color="@color/set1_Fullwhite" />
            <corners android:bottomLeftRadius="0dp" android:radius="15dp" android:topLeftRadius="0dp" />
            <stroke android:width="1dp" android:color="@color/set1_Fullwhite" />
        </shape>
    </item>
    <!-- 預設時 -->
    <item android:state_checked="false" android:state_pressed="false">
        <shape>
            <solid android:color="@color/set1_white" />
            <corners android:bottomLeftRadius="0dp" android:radius="15dp" android:topLeftRadius="0dp" />
            <stroke android:width="1dp" android:color="@color/set1_Fullwhite" />
        </shape>
    </item>

</selector>